<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.0.5</version>
        <relativePath/>
    </parent>

    <groupId>org.mar.telegram.bot</groupId>
    <artifactId>TelegramBot</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <spring.starter.version>${parent.version}</spring.starter.version>
        <artemis.jms.serve.version>2.28.0</artemis.jms.serve.version>
        <telegram.bot.api.version>6.5.0</telegram.bot.api.version>
        <commons-io.version>2.11.0</commons-io.version>
        <jsoup.version>1.15.4</jsoup.version>

        <jkube.version>1.12.0</jkube.version>
        <jkube.generator.name>marolok/telegram-bot:v${project.version}</jkube.generator.name>

        <TELEGRAM_BOT_TOKEN>123456789:12312312313123123123123213123123</TELEGRAM_BOT_TOKEN>
        <IMAGE_TEMP_DIR>/opt/app/temp/</IMAGE_TEMP_DIR>
        <LOGGER_DIR>/opt/app/temp/logs/</LOGGER_DIR>
        <MOUNT_VM_PATH>/local/</MOUNT_VM_PATH>
    </properties>

    <dependencies>
        <!--    SPRING    -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
            <version>${spring.starter.version}</version>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
            <version>${spring.starter.version}</version>
        </dependency>

        <!--    MQ    -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-artemis</artifactId>
            <version>${spring.starter.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.activemq</groupId>
            <artifactId>artemis-jms-server</artifactId>
            <version>${artemis.jms.serve.version}</version>
        </dependency>


        <!--    UTILS    -->
        <dependency>
            <groupId>com.github.pengrad</groupId>
            <artifactId>java-telegram-bot-api</artifactId>
            <version>${telegram.bot.api.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-io</groupId>
            <artifactId>commons-io</artifactId>
            <version>${commons-io.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jsoup</groupId>
            <artifactId>jsoup</artifactId>
            <version>${jsoup.version}</version>
        </dependency>


        <!--    TEST    -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <version>${spring.starter.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.eclipse.jkube</groupId>
                <artifactId>kubernetes-maven-plugin</artifactId>
                <version>${jkube.version}</version>
                <configuration>
                    <images>
                        <image>
                            <name>marolok/telegram-bot:v${project.version}</name>
                            <alias>telegram-bot</alias>
                            <build>
                                <from>eclipse-temurin:17.0.6_10-jre-alpine</from>
                                <entryPoint>
                                    <exec>
                                        <arg>java</arg>
                                        <arg>-jar</arg>
                                        <arg>/maven/${project.artifactId}-${project.version}.jar</arg>
                                        <arg>--spring.profiles.active=production</arg>
                                        <arg>--logging.file.path=${LOGGER_DIR}</arg>
                                        <arg>--application.bot.token=${TELEGRAM_BOT_TOKEN}</arg>
                                        <arg>--application.bot.directory.path=${IMAGE_TEMP_DIR}</arg>
                                    </exec>
                                </entryPoint>
                            </build>
                        </image>
                    </images>

                    <resources>
                        <controller>
                            <volumes>
                                <volume>
                                    <name>local-dir-val</name>
                                    <type>hostPath</type>
                                    <!-- Look path in minikube mount <target directory> -->
                                    <path>${MOUNT_VM_PATH}</path>
                                    <mounts>
                                        <mount>${IMAGE_TEMP_DIR}</mount>
                                    </mounts>
                                </volume>
                            </volumes>
                        </controller>
                    </resources>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>